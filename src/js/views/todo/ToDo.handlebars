<div id="{{id}}" class="to_do_item">
  <div class="pure-g">
    <div class="pure-u-3-4">
      <span class="fa fa-minus-circle remove"></span>
      <span class="title {{#if isComplete}}complete{{/if}}">{{title}}</span>
      <input type="text" class='hidden edit_box' value="{{title}}">
    </div>
    <div class="pure-u-1-4 controls">
      <span class="fa fa-pencil edit"></span>
      <span class="fa fa-check-circle{{#unless isComplete}}-o{{/unless}} status"></span>
    </div>
  </div>
</div>